<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_list_news_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_demo"/>
    <TextView
        android:id="@+id/tv_list_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好呵呵哈哈哈或哈或哈哈或哈哈哈啊啊哈哈哈哈哈哈"
        android:textSize="20dp"
        android:maxLines="3"
        android:ellipsize="end"
       android:layout_toRightOf="@id/iv_list_news_img"/>
    <TextView
        android:id="@+id/tv_list_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_list_news_img"
        android:layout_alignRight="@id/tv_list_news_title"
        android:text="2016-12-25 17:07"/>

</RelativeLayout>